{% extends 'base.html.twig' %}

{% block title %}Edition du casting{{ casting.personage }}{% endblock %}
{% block menu_casting %} active {% endblock %}

{% block body %}
<section class="bloc-admin-informations">
    <h2 class="entitled">Modifier : {{ casting.personage }}</h2>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <br>
    <span class="label-admin">{{ form_row(form.personage) }}</span>
    <br>
    <span class="label-admin">{{ form_row(form.creditOrder) }}</span>
    <br>
    <span class="label-admin">{{ form_row(form.movie) }}</span>
    <br>
    <div>
        <a class="nav_admin"href="{{ path('admin_casting') }}"><button class="submit">Retour</button></a>
        <a class="nav_admin"href="{{ path('admin_casting_edit', {id: casting.id}) }}"><button class="submit" type="submit">Modifier</button></a>
    </div> 
</section>
{{ form_end(form) }}
{% endblock %}