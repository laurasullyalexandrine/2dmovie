{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}
{% block menu_person %} active {% endblock %}
{% block body %}
<section>
    <div class="admin-display">
        <h1 class="entitled"> Les rôles </h1>  
        
        {% for person in person_list %}
            <ul class="admin-movie-list">
                 <li>
                 <strong class="movies-title-strong"><a class ="names-strong-link" href="{{ path('admin_person_read', {id: person.id}) }}"> {{ person.name }}</a></strong>
                </li>
            </ul>
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}
            <a class="nav_admin" href="{{ path('admin_person_add') }}"><button class="submit">Ajouter</button></a>
        {% endif %}
    </div>
</section>
