{% extends 'base.html.twig' %}

{% block title %}Liste Genres{% endblock %}
{% block menu_genre %} active {% endblock %}
{% block body %}
<section>
    <div class="admin-display">
        <div class="title-add">
        <h1 class="admin-principal"> Liste des genres</h1>  

        {% if is_granted('ROLE_ADMIN') %}
        <a class="nav_admin" href="{{ path('admin_genre_add') }}"><button class="submit">Ajouter</button></a>
        {% endif %}
        
        </div>
        
        {% for genre in genre_list %}
            <ul class="admin-movie-list">
                 <li>
                 <strong class="movies-title-strong"><a class ="names-strong-link" href="{{ path('admin_genre_read', {id: genre.id}) }}"> {{ genre.name }}</a></strong>
                </li>
            </ul>
        {% endfor %}
        </div>
</section>
