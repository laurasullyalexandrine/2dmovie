
{% extends 'base.html.twig' %}

{% block title %}Edition du genre {{ genre.name }}{% endblock %}
{% block menu_genre %} active {% endblock %}
{% block body %}
<section class="bloc-admin-informations">
    <h2 class="entitled">Modifier : {{ genre.name }}</h2>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <br>
    <span class="label-admin">{{ form_row(form.name) }}</span>
    <br>
    <div>
        <a class="nav_admin"href="{{ path('admin_genre') }}"><button class="submit">Retour</button></a>
        <a class="nav_admin"href="{{ path('admin_genre_edit', {id: genre.id}) }}"><button class="submit" type="submit">Modifier</button></a>
    </div> 
</section>
{{ form_end(form) }}
{% endblock %}